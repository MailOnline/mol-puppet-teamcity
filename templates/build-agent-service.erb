[Unit]
Description=Teamcity master service

[Service]
Restart=on-failure
StartLimitInterval=20
StartLimitBurst=5
TimeoutStartSec=0
User=teamcity
Environment="HOME=/home/teamcity"
Environment="TEAMCITY_HOME=/var/lib/teamcity"
Environment="TEAMCITY_LOGS=<%= @agent_dir %>/logs"
Environment="TEAMCITY_DATA_PATH=/var/lib/teamcity"

PIDFile=<%= @agent_dir %>/logs/buildAgent.pid
ExecStart=<%= @agent_dir %>/bin/agent.sh start
ExecStop=<%= @agent_dir %>/bin/agent.sh stop

[Install]
WantedBy=multi-user.target